<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="es"> <!--<![endif]-->
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>{{title}}</title>

    {{#each description}}
        <meta name="description" content={{this}}>
    {{/each}}
	<meta name="keywords" content="">
	<meta name="author" content="">
	
	<!--  Mobile Viewport Fix, use at own risk -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=0.5 maximum-scale=1.0">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <!-- touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/md3-touch-icon-precomposed_144x144.png">

	<!-- Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references -->
	<link rel="shortcut icon" href="/images/favicon.ico">
	<link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
	
	<!-- CSS : implied media="screen" -->
    {{#each data.css}}
        <link rel="stylesheet" href="{{this}}" type="text/css">
    {{/each}}
    {{#each data.mincss}}
        <link rel="stylesheet" href="{{this}}" type="text/css">
    {{/each}}

	<!--[if lte IE 8]>
	<link rel="stylesheet" media="all" href="css/ie.css"/>
    <![endif]-->


	<!-- SCRIPTS -->
	<!-- libraries -->
    {{#each data.jsLib}}
        <script src="{{this}}"></script>
    {{/each}}
	<!-- plugins -->
    {{#each data.jsPlugs}}
        <script src="{{this}}"></script>
    {{/each}}
	<!-- Own JS (minified or not)-->
    {{#each data.js}}
        <script src="{{this}}"></script>
    {{/each}}
    {{#each data.minjs}}
        <script src="{{this}}"></script>
    {{/each}}

</head>

<body>
    <!-- IE chromeframe alert -->
    <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> to experience this site.</p><![endif]-->

    <!-- @TODO: Create wrapper helper -->
    <!--{{#wrapper data=data}}
        {{{body}}}
    {{/wrapper}}-->

    <!-- Main content -->
    <main id="mainContent" role="content">
        {{{body}}}
    </main>

    <!-- inits js -->
    {{#each data.initjs}}
        <script src="{{this}}"></script>
    {{/each}}
    {{#each data.mininitjs}}
        <script src="{{this}}"></script>
    {{/each}}

	<!-- IE js (polyfills) -->
    {{#each data.jsPolyfill}}
        <script src="{{this}}"></script>
    {{/each}}

</body>

</html>

