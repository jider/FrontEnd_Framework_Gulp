<head>
    {# METAS #}
    {% block metas %}
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{{context.title}}</title>

        {% for meta in context.metas %}
            <meta name="{{ meta.name }}" content="{{ meta.content }}">
        {% endfor %}

        <!--  Mobile Viewport Fix, use at own risk -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=0.5 maximum-scale=1.0">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    {% endblock %}

    {# STYLE #}
    {% block links %}
        <!-- touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/md3-touch-icon-precomposed_144x144.png">

        <!-- Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references -->
        <link rel="shortcut icon" href="/images/favicon.ico">
        <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">

        <!-- CSS : implied media="screen" -->
        {% for href in context.css %}
            <link rel="stylesheet" href="{{ href }}" type="text/css">
        {% endfor %}
    {% endblock %}

    {# SCRIPTS #}
    {% block scripts %}
        {% for src in context.js %}
            <script src="{{ src }}"></script>
        {% endfor %}
    {% endblock %}
</head>

<body>
    {# IE chromeframe alert #}
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    {# @TODO: Create wrapper helper #}

    <!-- Header -->
    {% block header %}{% endblock %}

    <!-- Main content -->
    <main id="mainContent" role="content">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    {% block footer %}{% endblock %}

    {# BOTTOM PAGE SCRIPTS #}
    {% block bottom_scripts %}
        {% for src in context.initjs %}
            <script src="{{ src }}"></script>
        {% endfor %}
    {% endblock %}
</body>

</html>

