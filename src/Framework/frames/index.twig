<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="es"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang="es"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="es"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="es"> <!--<![endif]-->
<head>
    {# METAS #}
    {% block metas %}
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{{title}}</title>

        {% for info in descriptions %}
            <meta name="description" content="{{ info }}">
        {% endfor %}
        {% for info in keywords %}
            <meta name="keywords" content="{{ info }}">
        {% endfor %}
        <meta name="author" content="{{ author }}">

        <!--  Mobile Viewport Fix, use at own risk -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=0.5 maximum-scale=1.0">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    {% endblock metas %}

    {# STYLE #}
    {% block links %}
        <!-- touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/md3-touch-icon-precomposed_144x144.png">

        <!-- Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references -->
        <link rel="shortcut icon" href="/images/favicon.ico">
        <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">

        <!-- CSS : implied media="screen" -->
        {% for href in data.css %}
            <link rel="stylesheet" href="{{ href }}" type="text/css">
        {% endfor %}
        {% for href in data.mincss %}
            <link rel="stylesheet" href="{{ href }}" type="text/css">
        {% endfor %}

        <!--[if lte IE 8]>
        <link rel="stylesheet" media="all" href="css/ie.css"/>
        <![endif]-->
    {% endblock links %}

    {# SCRIPTS #}
    {% block scripts %}
        <!-- libraries -->
        {% for src in data.jsLib %}
            <script src="{{ src }}"></script>
        {% endfor %}
        <!-- plugins -->
        {% for src in data.jsPlugs %}
            <script src="{{ src }}"></script>
        {% endfor %}
        <!-- Own JS (minified or not)-->
        {% for src in data.js %}
            <script src="{{ src }}"></script>
        {% endfor %}
        {% for src in data.minjs %}
            <script src="{{ src }}"></script>
        {% endfor %}
    {% endblock scripts %}
</head>

<body>
    {# IE chromeframe alert #}
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    {# @TODO: Create wrapper helper #}

    <!-- Main content -->
    <main id="mainContent" role="content">
        {% block body %}{% endblock %}
    </main>

    {# BOTTOM PAGE SCRIPTS #}
    {% block scripts_bottom %}
        <!-- inits js -->
        {% for src in data.initjs %}
            <script src="{{ src }}"></script>
        {% endfor %}
        {% for src in data.mininitjs %}
            <script src="{{ src }}"></script>
        {% endfor %}

        <!-- IE js (polyfills) -->
        {% for src in data.jsPolyfill %}
            <script src="{{ src }}"></script>
        {% endfor %}
    {% endblock scripts_bottom %}
</body>

</html>

